<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="20"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="5dp"
                android:minWidth="5dp"
                android:drawableLeft="@drawable/ic_navigate_before"
                android:drawableStart="@drawable/ic_navigate_before"
                android:gravity="center_horizontal|center_vertical"/>
            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="5dp"
                android:minWidth="5dp"
                android:drawableRight="@drawable/ic_navigate_next"
                android:drawableEnd="@drawable/ic_navigate_next"
                android:gravity="center_horizontal|center_vertical"/>
            <Button
                android:id="@+id/btnAddPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="5dp"
                android:minWidth="5dp"
                android:drawableLeft="@drawable/ic_add_circle"
                android:drawableStart="@drawable/ic_add_circle"
                android:textColor="@android:color/white"
                android:drawableTint="@android:color/white"/>
            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="5dp"
                android:minWidth="5dp"
                android:drawableRight="@drawable/ic_refresh"
                android:drawableEnd="@drawable/ic_refresh"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@android:color/white"
                android:drawableTint="@android:color/white" />

        </LinearLayout>
        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:drawableLeft="@drawable/ic_home"
            android:drawableStart="@drawable/ic_home"
            android:textColor="@android:color/white"
            android:drawableTint="@android:color/white"/>
        <Button
            android:id="@+id/btnSaveMark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:drawableLeft="@drawable/ic_bookmark"
            android:drawableStart="@drawable/ic_bookmark"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marks"
            android:drawableLeft="@drawable/ic_collections_bookmark"
            android:drawableStart="@drawable/ic_collections_bookmark"
            android:textColor="@android:color/white"
            android:drawableTint="@android:color/white"/>
    </LinearLayout>
</LinearLayout>